# Environment Variables Template for Production
# Copy this file to .env.local for local development
# For DigitalOcean deployment, set these in the App Platform dashboard

# Database Configuration
# DigitalOcean will automatically provide this for the managed PostgreSQL database
DATABASE_URL="postgresql://username:password@host:port/database"

# Next.js Configuration
NODE_ENV=production
NEXTAUTH_URL=https://your-app-name.ondigitalocean.app
NEXTAUTH_SECRET=your-secure-random-secret-key-here

# Clerk Authentication (if using Clerk)
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key

# Voice Agent API Configuration
VOICE_AGENT_WEBHOOK_SECRET=your-webhook-secret-here

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600000

# Logging
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
ALLOWED_ORIGINS=https://your-app-name.ondigitalocean.app